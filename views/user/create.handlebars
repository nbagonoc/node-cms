<h3 class="text-capitalize">
    create a post</h3>
<hr> {{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{message}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}
<form action="/user/posts/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" placeholder="Enter the title">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" class="form-control" placeholder="Enter the title">
            {{#each categories}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" class="form-control" placeholder="Enter the title">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>
    <div class="form-group">
        <div class="form-check">
            <label for="allowComments" class="form-check-label">
                <input type="checkbox" name="allowComments" checked class="form-check-input"> Allow Comments</label>
        </div>
    </div>
    <div class="form-group">
        <label for="title">Image</label>
        <input type="file" name="image" class="form-control">
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea type="text" rows="5" name="body" class="form-control" placeholder="Enter content body"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-success" style="cursor:pointer">Submit</button>
    <a href="/user/posts" role="button" class="btn btn-outline-danger">Cancel</a>
</form>