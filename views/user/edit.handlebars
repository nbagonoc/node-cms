<h3 class="text-capitalize">
    edit a post</h3>
<hr>
<form action="/user/posts/edit/{{data.id}}?_method=PATCH" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" placeholder="Enter the title" value="{{data.title}}">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" class="form-control" placeholder="Enter the title">
            {{#select data.category}} {{#each categories}}
            <option value="{{id}}">{{name}}</option>
            {{/each}} {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" class="form-control" placeholder="Enter the title">
            {{#select data.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <div class="form-check">
            <label for="allowComments" class="form-check-label">
                <input type="checkbox" {{#if data.allowComments}} checked="checked" {{/if}} name="allowComments" class="form-check-input">Allow Comments</label>
        </div>
    </div>
    <div class="form-group">
        <label for="title">Image</label>
        <input type="file" name="image" class="form-control">
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea type="text" rows="5" name="body" class="form-control" placeholder="Enter content body">{{data.body}}</textarea>
    </div>
    <button type="submit" class="btn btn-outline-success" style="cursor:pointer">Edit</button>
    <a href="/user/posts" role="button" class="btn btn-outline-danger">Cancel</a>
</form>